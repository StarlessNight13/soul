---
import Navbar from "../components/navbar.astro";

// 1. The frontmatter prop gives access to frontmatter and other data
const { frontmatter } = Astro.props;
---

<html>
  <head>
    <title>{frontmatter.title}</title>
  </head>
  <body
    class="group/body bg-base bg-opacity-100 text-lg text-text"
    data-entry="blog"
  >
    <Navbar />
    <div class="flex items-center justify-center gap-5 px-5 pt-3">
      <h1 class="font-chakra text-5xl font-bold text-teal">
        {frontmatter.title}
      </h1>
      <a href={frontmatter.link}>
        <span
          class="hidden cursor-pointer rounded-md bg-black bg-opacity-30 p-1 transition-colors hover:bg-opacity-50 hover:ring hover:transition-colors sm:inline-block"
        >
          ðŸ”—
        </span>
      </a>
    </div>
    <article class="px-10 py-2">
      <slot />
    </article>
  </body>
</html>

